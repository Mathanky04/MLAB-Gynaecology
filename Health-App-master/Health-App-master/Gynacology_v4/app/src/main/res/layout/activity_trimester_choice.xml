<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/images"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="kuppam.gynacology_v3.choice">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Trimester 1"
            android:id="@+id/button_t1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:textColor="#fff"
            android:background="#f39c12"
            android:padding="5dp"
            android:layout_marginTop="90dp" />


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Trimester 3"
            android:id="@+id/button_t3"
            android:textColor="#fff"
            android:padding="5dp"
            android:background="#f39c12"
            android:layout_marginTop="77dp"
            android:layout_below="@+id/button_t2"
            android:layout_alignLeft="@+id/button_t2"
            android:layout_alignStart="@+id/button_t2"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Trimester 2"
            android:id="@+id/button_t2"
            android:textColor="#fff"
            android:padding="5dp"
            android:background="#f39c12"
            android:layout_marginTop="77dp"
            android:layout_below="@+id/button_t1"
            android:layout_alignLeft="@+id/button_t1"
            android:layout_alignStart="@+id/button_t1"/>


    </RelativeLayout>
</RelativeLayout>